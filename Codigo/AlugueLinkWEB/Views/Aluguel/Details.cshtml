@model AlugueLinkWEB.Models.AluguelViewModel
@{
    ViewData["Title"] = "Detalhes do Aluguel";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-file-contract me-2"></i>Detalhes do Aluguel
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
                    
                    <dt class="col-sm-3">Nome</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.LocatarioNome)</dd>
                    
                    <dt class="col-sm-3">Endereço</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ImovelEndereco)</dd>
                    
                    <dt class="col-sm-3">Tipo do Imóvel</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ImovelTipoTexto)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataInicio)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataInicio)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataFim)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataFim)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataAssinatura)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataAssinatura)</dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.StatusTexto == "Ativo" ? "bg-success" : Model.StatusTexto == "Finalizado" ? "bg-secondary" : "bg-warning")">
                            @Html.DisplayFor(model => model.StatusTexto)
                        </span>
                    </dd>
                    
                    <dt class="col-sm-3">Valor do Aluguel</dt>
                    <dd class="col-sm-9">
                        <span class="h5 text-primary fw-bold">R$ @Model.ImovelValor?.ToString("N2")</span>
                        <small class="text-muted">/mês</small>
                    </dd>
                </dl>
                
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Voltar à Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>