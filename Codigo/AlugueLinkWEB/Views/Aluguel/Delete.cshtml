@model AlugueLinkWEB.Models.AluguelViewModel
@{
    ViewData["Title"] = "Excluir Aluguel";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Excluir Aluguel
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir este aluguel?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LocatarioNome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.LocatarioNome)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ImovelEndereco)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ImovelEndereco)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataInicio)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataInicio)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataFim)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataFim)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Status == "Ativo" ? "bg-success" : Model.Status == "Finalizado" ? "bg-secondary" : "bg-warning")">
                            @Html.DisplayFor(model => model.Status)
                        </span>
                    </dd>
                    
                    <dt class="col-sm-3">Valor do Aluguel</dt>
                    <dd class="col-sm-9">
                        <span class="h5 text-primary fw-bold">R$ @Model.ImovelValor?.ToString("N2")</span>
                        <small class="text-muted">/mês</small>
                    </dd>
                </dl>
                
                <form asp-action="Delete" method="post" class="d-inline">
                    <input asp-for="Id" type="hidden" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Confirmar Exclusão
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>