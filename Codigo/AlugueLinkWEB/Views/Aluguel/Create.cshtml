@model AlugueLinkWEB.Models.AluguelViewModel
@{
    ViewData["Title"] = "Cadastrar Aluguel";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-file-contract me-2"></i>Cadastrar Novo Aluguel
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Importante:</strong> Apenas imóveis disponíveis aparecem na lista abaixo.
                        Recursos já em uso por contratos ativos são automaticamente filtrados.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdLocatario" class="form-label"></label>
                                <select asp-for="IdLocatario" class="form-select" asp-items="ViewBag.IdLocatario">
                                    <option value="">Selecione o inquilino</option>
                                </select>
                                <span asp-validation-for="IdLocatario" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdImovel" class="form-label"></label>
                                <select asp-for="IdImovel" class="form-select" asp-items="ViewBag.IdImovel">
                                    <option value="">Selecione o imóvel</option>
                                </select>
                                <span asp-validation-for="IdImovel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="DataInicio" class="form-label"></label>
                                <input asp-for="DataInicio" class="form-control" type="date" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="DataFim" class="form-label"></label>
                                <input asp-for="DataFim" class="form-control" type="date" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="DataAssinatura" class="form-label"></label>
                                <input asp-for="DataAssinatura" class="form-control" type="date" />
                                <span asp-validation-for="DataAssinatura" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" asp-items="ViewBag.Status">
                            <option value="">Selecione o status</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Cadastrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}