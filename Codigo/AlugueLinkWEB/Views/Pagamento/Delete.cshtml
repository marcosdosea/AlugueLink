@model AlugueLinkWEB.Models.PagamentoViewModel

@{
    ViewData["Title"] = "Excluir Pagamento";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmar Exclusão
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir este pagamento?
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-hashtag me-1"></i>ID do Pagamento
                        </label>
                        <p class="form-control-plaintext">#@Model.Id</p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-info-circle me-1"></i>Status
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge @(Model.StatusCssClass.Replace("text-", "bg-"))">
                                @Model.StatusPagamento
                            </span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-money-bill me-1"></i>Valor
                        </label>
                        <p class="form-control-plaintext text-success fw-bold">
                            @Model.Valor?.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-credit-card me-1"></i>Tipo de Pagamento
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-info">@Model.TipoPagamentoTexto</span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-calendar-alt me-1"></i>Data do Pagamento
                        </label>
                        <p class="form-control-plaintext">
                            @Model.DataPagamento?.ToString("dd/MM/yyyy")
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-clock me-1"></i>Hora do Pagamento
                        </label>
                        <p class="form-control-plaintext">
                            @Model.HoraPagamento?.ToString("HH:mm")
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-user me-1"></i>Inquilino
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.LocatarioNome))
                            {
                                @Model.LocatarioNome
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-money-bill-wave me-1"></i>Valor do Aluguel
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.ValorAluguel.HasValue)
                            {
                                @Model.ValorAluguel.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                                @if (Model.Valor == Model.ValorAluguel)
                                {
                                    <small class="text-success ms-2">
                                        <i class="fas fa-check-circle"></i> Valor correto
                                    </small>
                                }
                                else
                                {
                                    <small class="text-warning ms-2">
                                        <i class="fas fa-exclamation-triangle"></i> Valor diferente
                                    </small>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-home me-1"></i>Imóvel
                    </label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrEmpty(Model.ImovelEndereco))
                        {
                            @Model.ImovelEndereco
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>

                <form asp-action="Delete" method="post" class="d-flex justify-content-between pt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Confirmar Exclusão
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>