@model AlugueLinkWEB.Models.PagamentoViewModel

@{
    ViewData["Title"] = "Novo Pagamento";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-plus me-2 text-primary"></i>
                    Registrar Novo Pagamento
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AluguelId" class="form-label">
                                <i class="fas fa-file-contract me-1"></i>@Html.DisplayNameFor(model => model.AluguelId)
                            </label>
                            @Html.DropDownListFor(m => m.AluguelId, ViewBag.AluguelId as SelectList, "Selecione o aluguel...", new { @class = "form-select", @id = "aluguelSelect" })
                            <span asp-validation-for="AluguelId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TipoPagamento" class="form-label">
                                <i class="fas fa-credit-card me-1"></i>@Html.DisplayNameFor(model => model.TipoPagamento)
                            </label>
                            @Html.DropDownListFor(m => m.TipoPagamento, ViewBag.TipoPagamento as SelectList, "Selecione o tipo...", new { @class = "form-select" })
                            <span asp-validation-for="TipoPagamento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="ValorStr" class="form-label">
                                <i class="fas fa-money-bill me-1"></i>@Html.DisplayNameFor(model => model.ValorStr)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="ValorStr" class="form-control" id="valorInput" readonly style="background-color: #e9ecef;" />
                            </div>
                            <input asp-for="Valor" type="hidden" id="valorHidden" />
                            <span asp-validation-for="ValorStr" class="text-danger"></span>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                O valor é automaticamente definido baseado no valor do aluguel selecionado.
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DataPagamento" class="form-label">
                                <i class="fas fa-calendar-alt me-1"></i>@Html.DisplayNameFor(model => model.DataPagamento)
                            </label>
                            <input asp-for="DataPagamento" type="date" class="form-control" />
                            <span asp-validation-for="DataPagamento" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraPagamento" class="form-label">
                                <i class="fas fa-clock me-1"></i>@Html.DisplayNameFor(model => model.HoraPagamento)
                            </label>
                            <input asp-for="HoraPagamento" type="time" class="form-control" />
                            <span asp-validation-for="HoraPagamento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salvar Pagamento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Evento quando o aluguel é selecionado
            $('#aluguelSelect').change(function() {
                var aluguelId = $(this).val();
                
                if (aluguelId) {
                    // Fazer requisição AJAX para obter o valor do aluguel
                    $.get('@Url.Action("GetValorAluguel")', { aluguelId: aluguelId })
                        .done(function(data) {
                            if (data.success) {
                                $('#valorInput').val(data.valor);
                                $('#valorHidden').val(data.valor.replace(',', '.'));

                                // Mostrar feedback visual
                                $('#valorInput').removeClass('is-invalid').addClass('is-valid');
                            } else {
                                $('#valorInput').val('');
                                $('#valorHidden').val('');
                                $('#valorInput').removeClass('is-valid').addClass('is-invalid');
                                
                                // Mostrar mensagem de erro
                                if (data.message) {
                                    alert('Erro: ' + data.message);
                                }
                            }
                        })
                        .fail(function() {
                            $('#valorInput').val('');
                            $('#valorHidden').val('');
                            $('#valorInput').removeClass('is-valid').addClass('is-invalid');
                            alert('Erro ao carregar valor do aluguel. Tente novamente.');
                        });
                } else {
                    $('#valorInput').val('');
                    $('#valorHidden').val('');
                    $('#valorInput').removeClass('is-valid is-invalid');
                }
            });
            
            // Acionar o evento se já houver um aluguel selecionado
            if ($('#aluguelSelect').val()) {
                $('#aluguelSelect').trigger('change');
            }
        });
    </script>
}