@model AlugueLinkWEB.Models.PagamentoViewModel

@{
    ViewData["Title"] = "Detalhes do Pagamento";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-eye me-2 text-info"></i>
                    Detalhes do Pagamento
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-hashtag me-1"></i>ID do Pagamento
                        </label>
                        <p class="form-control-plaintext">#@Model.Id</p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-info-circle me-1"></i>Status
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge @(Model.StatusCssClass.Replace("text-", "bg-"))">
                                @Model.StatusPagamento
                            </span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-money-bill me-1"></i>@Html.DisplayNameFor(model => model.Valor)
                        </label>
                        <p class="form-control-plaintext text-success fw-bold fs-5">
                            @Model.Valor?.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-credit-card me-1"></i>@Html.DisplayNameFor(model => model.TipoPagamento)
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-info">@Model.TipoPagamentoTexto</span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-calendar-alt me-1"></i>@Html.DisplayNameFor(model => model.DataPagamento)
                        </label>
                        <p class="form-control-plaintext">
                            @Model.DataPagamento?.ToString("dd/MM/yyyy")
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-clock me-1"></i>@Html.DisplayNameFor(model => model.HoraPagamento)
                        </label>
                        <p class="form-control-plaintext">
                            @Model.HoraPagamento?.ToString("HH:mm")
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-user me-1"></i>Inquilino
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.LocatarioNome))
                            {
                                @Model.LocatarioNome
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-money-bill-wave me-1"></i>Valor do Aluguel
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.ValorAluguel.HasValue)
                            {
                                @Model.ValorAluguel.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                                @if (Model.Valor == Model.ValorAluguel)
                                {
                                    <small class="text-success ms-2">
                                        <i class="fas fa-check-circle"></i> Valor correto
                                    </small>
                                }
                                else
                                {
                                    <small class="text-warning ms-2">
                                        <i class="fas fa-exclamation-triangle"></i> Valor diferente do aluguel
                                    </small>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="mb-3">
                    <i class="fas fa-home me-2 text-primary"></i>
                    Informações do Imóvel
                </h5>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-1"></i>Endereço
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.ImovelEndereco))
                            {
                                @Model.ImovelEndereco
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="mb-3">
                    <i class="fas fa-file-contract me-2 text-primary"></i>
                    Informações do Contrato
                </h5>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-play me-1"></i>Data de Início
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.DataInicioAluguel.HasValue)
                            {
                                @Model.DataInicioAluguel.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-stop me-1"></i>Data de Fim
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.DataFimAluguel.HasValue)
                            {
                                @Model.DataFimAluguel.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-check-circle me-1"></i>Status do Aluguel
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.StatusAluguel))
                            {
                                var statusText = Model.StatusAluguel switch
                                {
                                    "A" => "Ativo",
                                    "F" => "Finalizado",
                                    "P" => "Pendente",
                                    _ => Model.StatusAluguel
                                };
                                var statusClass = Model.StatusAluguel switch
                                {
                                    "A" => "bg-success",
                                    "F" => "bg-secondary",
                                    "P" => "bg-warning",
                                    _ => "bg-light"
                                };
                                <span class="badge @statusClass">@statusText</span>
                            }
                            else
                            {
                                <span class="text-muted">Não informado</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="d-flex justify-content-between pt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Voltar
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>