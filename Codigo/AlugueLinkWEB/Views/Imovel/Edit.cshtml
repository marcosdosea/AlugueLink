@model AlugueLinkWEB.Models.ImovelViewModel
@{
    ViewData["Title"] = "Editar Imóvel";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <form asp-action="Edit" id="imovelForm" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="m-0">Endereço</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12 col-md-4">
                            <label asp-for="Cep" class="form-label">CEP <span class="required">*</span></label>
                            <input asp-for="Cep" class="form-control" type="text" maxlength="9" placeholder="00000-000" required id="Cep" />
                            <span asp-validation-for="Cep" class="text-danger"></span>
                            <div id="cep-error-message" class="text-danger small" style="display: none;"></div>
                        </div>
                        <div class="col-12 col-md-8">
                            <label asp-for="Logradouro" class="form-label">Rua/Logradouro <span class="required">*</span></label>
                            <input asp-for="Logradouro" class="form-control" placeholder="Rua, Avenida, etc." required id="Logradouro" />
                            <span asp-validation-for="Logradouro" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-4">
                            <label asp-for="Numero" class="form-label">Número <span class="required">*</span></label>
                            <input asp-for="Numero" class="form-control" type="text" pattern="[0-9]*" inputmode="numeric" maxlength="5" placeholder="123" required oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-8">
                            <label asp-for="Complemento" class="form-label">Complemento</label>
                            <input asp-for="Complemento" class="form-control" placeholder="Apto, Bloco, etc." id="Complemento" />
                            <span asp-validation-for="Complemento" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="Bairro" class="form-label">Bairro <span class="required">*</span></label>
                            <input asp-for="Bairro" class="form-control" placeholder="Nome do bairro" required id="Bairro" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-4">
                            <label asp-for="Cidade" class="form-label">Cidade <span class="required">*</span></label>
                            <input asp-for="Cidade" class="form-control" placeholder="Nome da cidade" required id="Cidade" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-2">
                            <label asp-for="Estado" class="form-label">Estado <span class="required">*</span></label>
                            <select asp-for="Estado" class="form-select" required id="Estado">
                                <option value="">Selecione</option>
                                <option value="AC">Acre</option>
                                <option value="AL">Alagoas</option>
                                <option value="AP">Amapá</option>
                                <option value="AM">Amazonas</option>
                                <option value="BA">Bahia</option>
                                <option value="CE">Ceará</option>
                                <option value="DF">Distrito Federal</option>
                                <option value="ES">Espírito Santo</option>
                                <option value="GO">Goiás</option>
                                <option value="MA">Maranhão</option>
                                <option value="MT">Mato Grosso</option>
                                <option value="MS">Mato Grosso do Sul</option>
                                <option value="MG">Minas Gerais</option>
                                <option value="PA">Pará</option>
                                <option value="PB">Paraíba</option>
                                <option value="PR">Paraná</option>
                                <option value="PE">Pernambuco</option>
                                <option value="PI">Piauí</option>
                                <option value="RJ">Rio de Janeiro</option>
                                <option value="RN">Rio Grande do Norte</option>
                                <option value="RS">Rio Grande do Sul</option>
                                <option value="RO">Rondônia</option>
                                <option value="RR">Roraima</option>
                                <option value="SC">Santa Catarina</option>
                                <option value="SP">São Paulo</option>
                                <option value="SE">Sergipe</option>
                                <option value="TO">Tocantins</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="m-0">Características do Imóvel</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Tipo" class="form-label">Tipo de Imóvel <span class="required">*</span></label>
                            <select asp-for="Tipo" class="form-select" required id="tipoImovel">
                                <option value="">Selecione o tipo</option>
                                <option value="casa">Casa</option>
                                <option value="apartamento">Apartamento</option>
                                <option value="comercial">Comercial</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-3 conditional-field" id="quartosContainer">
                            <label asp-for="Quartos" class="form-label">Quartos <span class="required quartos-required">*</span></label>
                            <input asp-for="Quartos" class="form-control" type="number" min="0" max="50" step="1" id="quartosField" oninput="this.value = this.value.replace(/[^0-9]/g, ''); if(parseInt(this.value) > 50) this.value = 50;" />
                            <span asp-validation-for="Quartos" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-3 conditional-field" id="banheirosContainer">
                            <label asp-for="Banheiros" class="form-label">Banheiros <span class="required banheiros-required">*</span></label>
                            <input asp-for="Banheiros" class="form-control" type="number" min="0" max="50" step="1" id="banheirosField" oninput="this.value = this.value.replace(/[^0-9]/g, ''); if(parseInt(this.value) > 50) this.value = 50;" />
                            <span asp-validation-for="Banheiros" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-3">
                            <label asp-for="Area" class="form-label">Área (m²) <span class="required">*</span></label>
                            <input asp-for="Area" class="form-control" type="text" required oninput="formatDecimalInput(this)" data-decimal-field="true" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-3">
                            <label asp-for="VagasGaragem" class="form-label text-nowrap">Vagas Garagem</label>
                            <input asp-for="VagasGaragem" class="form-control" type="number" min="0" max="50" step="1" oninput="this.value = this.value.replace(/[^0-9]/g, ''); if(parseInt(this.value) > 50) this.value = 50;" />
                            <span asp-validation-for="VagasGaragem" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Valor" class="form-label">Valor do Aluguel (R$) <span class="required">*</span></label>
                            <input asp-for="Valor" class="form-control" type="text" required oninput="formatDecimalInput(this)" data-decimal-field="true" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Descricao" class="form-label">Características <span class="required">*</span></label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva as características do imóvel" required></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar para Lista</a>
                <button type="submit" class="btn btn-primary px-4">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/viacep-util.js"></script>
    <script>
        // Função para controlar obrigatoriedade dos campos baseado no tipo do imóvel
        function toggleFieldRequirements() {
            const tipoImovel = document.getElementById('tipoImovel');
            const quartosField = document.getElementById('quartosField');
            const banheirosField = document.getElementById('banheirosField');
            const quartosContainer = document.getElementById('quartosContainer');
            const banheirosContainer = document.getElementById('banheirosContainer');
            const quartosRequired = document.querySelector('.quartos-required');
            const banheirosRequired = document.querySelector('.banheiros-required');

            const isComercial = tipoImovel.value === 'comercial';

            if (isComercial) {
                // Remove obrigatoriedade para comercial
                quartosField.removeAttribute('required');
                banheirosField.removeAttribute('required');
                quartosRequired.style.display = 'none';
                banheirosRequired.style.display = 'none';
                quartosContainer.classList.add('optional');
                banheirosContainer.classList.add('optional');
                quartosField.placeholder = '0 (opcional)';
                banheirosField.placeholder = '0 (opcional)';
            } else {
                // Adiciona obrigatoriedade para outros tipos
                quartosField.setAttribute('required', 'required');
                banheirosField.setAttribute('required', 'required');
                quartosRequired.style.display = 'inline';
                banheirosRequired.style.display = 'inline';
                quartosContainer.classList.remove('optional');
                banheirosContainer.classList.remove('optional');
                quartosField.placeholder = '0';
                banheirosField.placeholder = '0';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const tipoImovel = document.getElementById('tipoImovel');
            tipoImovel.addEventListener('change', toggleFieldRequirements);
            toggleFieldRequirements();
        });

        // Função para formatar entrada decimal com vírgula e uma vírgula no máximo
        function formatDecimalInput(input) {
            let value = input.value;
            value = value.replace(/[^0-9,]/g, '');

            // mantém apenas a primeira vírgula
            const firstCommaIndex = value.indexOf(',');
            if (firstCommaIndex !== -1) {
                const before = value.substring(0, firstCommaIndex + 1);
                const after = value.substring(firstCommaIndex + 1).replace(/,/g, '');
                value = before + after;
            }

            // limita a duas casas decimais
            if (value.includes(',')) {
                const [intPart, decPartRaw] = value.split(',');
                const decPart = (decPartRaw || '').slice(0, 2);
                value = intPart + (decPart.length ? ',' + decPart : ',');
            }

            input.value = value;
            if (value.trim()) input.setCustomValidity('');
        }

        function validateDecimalField(input) {
            const value = input.value.trim();
            if (input.hasAttribute('required') && !value) {
                input.setCustomValidity('Este campo é obrigatório');
                return false;
            }
            if (value && !/^[0-9]+(\,[0-9]{0,2})?$/.test(value)) {
                input.setCustomValidity('Digite um valor válido (ex: 1000,50)');
                return false;
            }
            input.setCustomValidity('');
            return true;
        }

        document.getElementById('imovelForm').addEventListener('submit', function(e) {
            // Converte campos decimais com vírgula para ponto antes do post
            const decimalFields = this.querySelectorAll('[data-decimal-field="true"]');
            decimalFields.forEach(field => {
                // valida de novo antes de converter
                if (!validateDecimalField(field)) {
                    e.preventDefault();
                    field.focus();
                    return false;
                }
                if (field.value && field.value.includes(',')) {
                    field.value = field.value.replace('.', '').replace(',', '.');
                }
            });
        });

        // Pré-formatar valores existentes na edição (ponto -> vírgula)
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('[data-decimal-field="true"]').forEach(field => {
                if (field.value) {
                    field.value = field.value.replace('.', ',');
                }
            });
        });

        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar ViaCEP
            ViaCepUtil.init({
                cep: 'Cep',
                logradouro: 'Logradouro',
                complemento: 'Complemento',
                bairro: 'Bairro',
                cidade: 'Cidade',
                estado: 'Estado'
            });
        });
    </script>
}