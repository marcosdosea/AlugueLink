@model IEnumerable<AlugueLinkWEB.Models.LocatarioViewModel>

@{
    ViewData["Title"] = "Locatários";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Novo Locatário
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped locatario-table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefone1)</th>
                            <th>@Html.DisplayNameFor(model => model.Cpf)</th>
                            <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                            <th>@Html.DisplayNameFor(model => model.Estado)</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefone1)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <p class="text-muted">Nenhum locatário cadastrado.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cadastrar Primeiro Locatário
                </a>
            </div>
        }
    </div>
</div>

<style>
    /* Ensure tenant table text contrasts correctly in dark and light themes */
    /* Table header background should match surface in both themes */
    .locatario-table thead th {
        background-color: var(--color-surface) !important;
        color: var(--color-text) !important;
        border-bottom: 2px solid var(--color-border) !important;
    }

    body.dark-mode .locatario-table thead th {
        background-color: var(--color-surface-alt) !important;
        color: #ffffff !important;
        border-bottom: 2px solid rgba(255,255,255,0.06) !important;
    }

    /* Table body text color */
    body.dark-mode .locatario-table th,
    body.dark-mode .locatario-table td {
        color: #ffffff !important;
        border-color: rgba(255,255,255,0.06) !important;
    }

    body:not(.dark-mode) .locatario-table th,
    body:not(.dark-mode) .locatario-table td {
        color: #000000 !important;
        border-color: rgba(0,0,0,0.1) !important;
    }

    /* Override Bootstrap striped row backgrounds to match theme */
    .locatario-table.table-striped tbody tr:nth-of-type(odd) {
        background-color: transparent !important;
    }

    body.dark-mode .locatario-table.table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(255,255,255,0.015) !important;
    }

    body:not(.dark-mode) .locatario-table.table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,0.02) !important;
    }

    /* Keep action buttons visible in both themes */
    .locatario-table .btn-outline-info { color: var(--color-info) !important; border-color: var(--color-info) !important; }
    body.dark-mode .locatario-table .btn-outline-info { color: #9ad1ff !important; border-color: #2c8bd6 !important; }
</style>