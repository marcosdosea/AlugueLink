@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0"><i class="fas fa-key me-2"></i>Alterar Senha</h3>
                <p class="text-muted mb-0 small">Mantenha sua conta segura</p>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label">Senha Atual <span class="text-danger">*</span></label>
                        <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Digite sua senha atual" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">Nova Senha <span class="text-danger">*</span></label>
                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Digite sua nova senha" />
                        <div class="form-text">
                            <i class="fas fa-shield-alt"></i> A senha deve conter pelo menos 8 caracteres, incluindo letras maiúsculas, minúsculas e números.
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Nova Senha <span class="text-danger">*</span></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Digite a nova senha novamente" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Profile" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar ao Perfil
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Alterar Senha
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="alert alert-warning mt-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Dica de Segurança:</strong> Use uma senha forte e única. Após alterar a senha, você permanecerá logado neste dispositivo.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border: none;
    }
    
    .card-header {
        background: linear-gradient(45deg, #007bff, #0056b3);
        color: white;
        border-bottom: none;
    }
    
    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .btn-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
    }
    
    .btn-primary:hover {
        background: linear-gradient(45deg, #0056b3, #004085);
        transform: translateY(-1px);
    }
    
    .alert {
        border: none;
        border-radius: 0.5rem;
    }
    
    .form-text {
        font-size: 0.875rem;
    }
</style>