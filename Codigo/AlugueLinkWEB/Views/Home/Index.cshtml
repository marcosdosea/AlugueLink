@using Microsoft.AspNetCore.Identity
@using AlugueLinkWEB.Areas.Identity.Data
@inject SignInManager<UsuarioIdentity> SignInManager

@{
    ViewData["Title"] = "Início";
    var isAuthenticated = SignInManager.IsSignedIn(User);
}

@if (isAuthenticated)
{
    <!-- Usuário Logado - Dashboard -->
    <div class="welcome-hero mb-4 p-4 p-lg-5 rounded text-white">
        <h1 class="display-5 fw-bold mb-3 text-white">
            <i class="fas fa-handshake-angle me-2"></i>Bem-vindo ao AlugueLink
        </h1>
        <p class="lead mb-4 text-white">
            Gerencie seus imóveis e inquilinos com facilidade, encontre oportunidades e acompanhe tudo em um só lugar. 
            Estamos aqui para simplificar sua jornada no mercado de locação.
        </p>
        <div class="d-flex flex-wrap gap-2">
            <a asp-controller="Imovel" asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i>Novo Imóvel
            </a>
            <a asp-controller="Imovel" asp-action="Index" class="btn btn-outline-light btn-lg">
                <i class="fas fa-building me-2"></i>Meus Imóveis
            </a>
            <a asp-controller="Locatario" asp-action="Create" class="btn btn-outline-light btn-lg">
                <i class="fas fa-user-plus me-2"></i>Novo Inquilino
            </a>
            <a asp-controller="Locatario" asp-action="Index" class="btn btn-outline-light btn-lg">
                <i class="fas fa-users me-2"></i>Meus Inquilinos
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-chart-line me-2 text-primary"></i>Resumo Rápido
                    </h5>
                    <p class="text-muted mb-2">Acompanhe rapidamente seus principais indicadores.</p>
                    <ul class="list-unstyled small mb-0">
                        <li class="mb-1">
                            <i class="fas fa-building text-primary me-2"></i> 
                            Imóveis: <strong>@ViewBag.TotalImoveis total</strong>
                            (@ViewBag.ImoveisAlugados alugados, @ViewBag.ImoveisDisponiveis disponíveis)
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-users text-info me-2"></i> 
                            Inquilinos: <strong>@ViewBag.TotalLocatarios total</strong>
                            (@ViewBag.LocatariosOcupados ativos, @ViewBag.LocatariosDisponiveis inativos)
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-file-contract text-success me-2"></i> 
                            Total de contratos: <strong>@ViewBag.TotalAlugueis</strong>
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-tools text-warning me-2"></i> 
                            Manutenções pendentes: <strong>(em breve)</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-lightbulb me-2 text-warning"></i>Controle de Status
                    </h5>
                    <p class="text-muted mb-2">Como funciona o sistema:</p>
                    <ul class="small mb-0">
                        <li><strong>Imóveis ativos:</strong> Possuem contratos de aluguel vigentes</li>
                        <li><strong>Inquilinos ativos:</strong> Possuem contratos de aluguel em andamento</li>
                        <li><strong>Status automático:</strong> Baseado em contratos ativos</li>
                        <li><strong>Validação:</strong> Sistema impede conflitos de período</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Usuário Não Logado - Landing Page -->
    <div class="landing-page">
        <div class="hero-section text-center py-5 mb-5 rounded text-white">
            <h1 class="display-4 fw-bold mb-4 text-white">
                <i class="fas fa-home me-3"></i>AlugueLink
            </h1>
            <p class="lead mb-4 px-3 text-white">
                A plataforma completa para gestão de imóveis e locação. 
                Conecte proprietários e inquilinos de forma simples e segura.
            </p>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-user-plus me-2"></i>Criar Conta Grátis
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-4">
                    <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                </a>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-6">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="fas fa-building" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Gerencie Imóveis</h5>
                        <p class="card-text">
                            Cadastre e organize seus imóveis com facilidade. 
                            Acompanhe informações detalhadas e mantenha tudo atualizado.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <div class="text-success mb-3">
                            <i class="fas fa-users" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Controle de Inquilinos</h5>
                        <p class="card-text">
                            Gerencie dados dos inquilinos, contratos e pagamentos. 
                            Tenha tudo organizado em um só lugar.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <h3 class="mb-4">Pronto para começar?</h3>
            <p class="text-muted mb-4">
                Junte-se a centenas de proprietários e inquilinos que já usam o AlugueLink
            </p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">
                <i class="fas fa-rocket me-2"></i>Começar Agora
            </a>
        </div>
    </div>
}

<style>
    .welcome-hero, .hero-section { background: var(--color-hero-gradient)!important; }
    .btn-outline-light { border-color: rgba(255,255,255,.4); color:#fff; }
    .btn-outline-light:hover { background: rgba(255,255,255,.15); }
    body.dark-mode .btn-outline-light:hover { background: rgba(255,255,255,.25); }
    .landing-page .card { transition: transform .3s ease; }
    .landing-page .card:hover { transform: translateY(-6px); }
</style>
