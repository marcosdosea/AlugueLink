@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}
<div class="auth-wrapper d-flex align-items-center justify-content-center py-5">
    <div class="auth-card card shadow-lg border-0" style="max-width:480px; width:100%;">
        <div class="card-header text-center border-0 py-4">
            <h3 class="mb-1"><i class="fas fa-door-open me-2"></i>Entrar</h3>
            <p class="text-muted small mb-0">Acesse sua conta para continuar</p>
        </div>
        <div class="card-body p-4">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form id="loginForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label small text-uppercase fw-semibold">Email</label>
                    <div class="input-group input-group-lg rounded">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="nome@exemplo.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label small text-uppercase fw-semibold">Senha</label>
                    <div class="input-group input-group-lg rounded">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Sua senha" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label small" asp-for="Input.RememberMe">Lembrar de mim</label>
                </div>
                <div class="d-grid mb-3">
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary fw-semibold">
                        <i class="fas fa-sign-in-alt me-2"></i>Entrar
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center border-0 py-3">
            <p class="mb-0 small text-muted">Não tem uma conta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold"><i class="fas fa-user-plus me-1"></i>Registrar-se</a></p>
        </div>
    </div>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
<style>
    .auth-wrapper { min-height: calc(100vh - 60px); }
    .auth-card .form-control, .auth-card .input-group-text { background: var(--color-surface-alt); }
    .auth-card .form-control:focus { box-shadow: 0 0 0 .2rem rgba(13,110,253,.25); }
    body.no-auth .page-title { display:none; }
</style>
