@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}
<div class="auth-wrapper d-flex align-items-center justify-content-center py-5">
    <div class="auth-card card shadow-lg border-0" style="max-width:500px; width:100%;">
        <div class="card-header text-center border-0 py-4">
            <h3 class="mb-1"><i class="fas fa-user-plus me-2"></i>Criar Conta</h3>
            <p class="text-muted small mb-0">Junte-se ao AlugueLink hoje</p>
        </div>
        <div class="card-body p-4">
            @if (TempData["EmailWarning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["EmailWarning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.NomeCompleto" class="form-label small text-uppercase fw-semibold">Nome Completo <span class="text-danger">*</span></label>
                    <div class="input-group input-group-lg rounded">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="Input.NomeCompleto" class="form-control" autocomplete="name" placeholder="Seu nome completo" />
                    </div>
                    <span asp-validation-for="Input.NomeCompleto" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label small text-uppercase fw-semibold">Email <span class="text-danger">*</span></label>
                    <div class="input-group input-group-lg rounded">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="nome@exemplo.com" />
                    </div>
                    <div class="form-text small">
                        <i class="fas fa-info-circle me-1"></i>Este email será usado para login
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label small text-uppercase fw-semibold">Senha <span class="text-danger">*</span></label>
                    <div class="input-group input-group-lg rounded">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Mínimo 8 caracteres" />
                    </div>
                    <div class="form-text small">
                        <i class="fas fa-shield-alt me-1"></i>A senha deve conter letras maiúsculas, minúsculas e números.
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label small text-uppercase fw-semibold">Confirmar Senha <span class="text-danger">*</span></label>
                    <div class="input-group input-group-lg rounded">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Repita a senha" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>
                <div class="d-grid mb-3">
                    <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary fw-semibold">
                        <i class="fas fa-user-plus me-2"></i>Criar Conta
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center border-0 py-3">
            <p class="mb-0 small text-muted">
                Já tem uma conta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold"><i class="fas fa-sign-in-alt me-1"></i>Fazer login</a>
            </p>
        </div>
    </div>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
<style>
    .auth-wrapper { min-height: calc(100vh - 60px); }
    .auth-card .form-control, .auth-card .input-group-text { background: var(--color-surface-alt); }
    .auth-card .form-control:focus { box-shadow: 0 0 0 .2rem rgba(13,110,253,.25); }
</style>
